@page "/phonics"
@{
    <div class="mt-5">
        @foreach(var book in Books)
        {
            <div class="card shadow-sm col-md-3 col-sm-2 mx-auto my-3 px-0" style="width: 18rem;">
                <img src="https://api.dicebear.com/9.x/shapes/svg?seed=@(new Random().Next(10))" class="card-img-top" alt="template">
                <div class="card-body">
                    <a href="/phonics/@book.Slug" class="card-title stretched-link text-decoration-none fw-bold fs-4">@book.Title</a>
                </div>
            </div>
            
        }
    </div>
}
