@page "/phonics/{bookSlug}/{unitId:int}/practice"

@* <FinalResults Practice="Practice" /> *@

@if (Finished) {

}
else if (Started) {
    if(this.Practice.CurrentPracticeName == ListenAndSelectPicture.Name) {
        <ListenAndSelectPicture Words="Unit.Words" OnFinished="OnPracticeFinished" />
    }
    else if(this.Practice.CurrentPracticeName == SayTheWord.Name) {
        <SayTheWord Words="Unit.Words" OnFinished="OnPracticeFinished" />
    }
}
else {
    <div class="d-flex flex-column flex-md-row align-items-md-center justify-content-around position-absolute top-50 start-50 translate-middle">
        <div class="form-floating mb-3 m-3">
            <input @bind="Name" type="name" class="form-control" id="student-name" placeholder="Enter your name">
            <label for="student-name">Enter your name</label>
        </div>
        <button @onclick="StartAsync" type="submit" class="btn btn-primary m-3">
            Let's go <i class="bi bi-rocket-fill"></i>
        </button>
    </div>
}